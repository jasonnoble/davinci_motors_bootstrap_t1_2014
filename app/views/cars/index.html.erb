<div class="page-header">
  <% if policy(Car.new).new? %>
    <%= link_to new_car_path, :class => 'btn btn-success btn-lg' do %>
      <span class="glyphicon glyphicon-heart-empty"></span>
      New Car
    <% end %>
  <% end %>
  <h1>Listing cars</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Price</th>
      <th colspan="4"></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @cars) do |car| %>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.year %></td>
      <td><%= number_to_currency(car.price) %></td>
      <td><%= link_to 'Show', car %></td>
      <td><%= link_to 'Edit', edit_car_path(car) %></td>
      <% if policy(car).show_destroy_link? %>
        <td><%= link_to 'Destroy', car, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
      <% if current_user %>
        <td><%= link_to('Claim', claim_car_path(car)) %></td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
